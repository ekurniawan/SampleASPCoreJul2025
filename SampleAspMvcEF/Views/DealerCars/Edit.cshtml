@model SampleAspMvcEF.ViewModels.DealerCarUpdateViewModel
@{
    ViewData["Title"] = "Edit Dealer Car";
}

<div class="col-md-4">
    <h3>Edit Dealer Car</h3><br />
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="DealerId" />
        <div class="mb-3">
            <label asp-for="DealerId" class="form-label">Dealer</label>
            <select asp-for="DealerId" class="form-select" asp-items="ViewBag.Dealers"></select>
        </div>
        <div class="mb-3">
            <label asp-for="CarId" class="form-label">Car</label>
            <select asp-for="CarId" class="form-select" asp-items="ViewBag.Cars"></select>
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="number" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Stock" class="form-label">Stock</label>
            <input asp-for="Stock" type="number" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DiscountPercent" class="form-label">Discount Percent</label>
            <input asp-for="DiscountPercent" type="number" class="form-control" />
            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        <div class="mb-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}