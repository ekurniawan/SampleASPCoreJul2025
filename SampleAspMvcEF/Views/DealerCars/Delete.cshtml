@model SampleAspMvcEF.Models.DealerCar
@{
    ViewData["Title"] = "Delete Dealer Car";
}

<div class="col-md-6">
    <h3>Delete Car</h3>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="DealerCarId" value="@Model.DealerCarId" />
        <p>Are you sure you want to delete this car <strong>@Model.Car.Model</strong> ? </p>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>