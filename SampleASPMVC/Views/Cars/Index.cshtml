@model IEnumerable<SampleASPMVC.Models.Car>
@{
    ViewData["Title"] = "Cars Page";
    var cars = ViewBag.Cars as List<string>;
}

<div class="text-center">
    <h2>Cars Lists</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Car ID</th>
                <th>Model</th>
                <th>Type</th>
                <th>Base Price</th>
                <th>Color</th>
                <th>Stock</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.CarID</td>
                    <td>@car.Model</td>
                    <td>@car.Type</td>
                    <td>@string.Format("{0:N0}", car.BasePrice)</td>
                    <td>@car.Color</td>
                    <td>@car.Stock</td>
                    <td>
                        <a href="/Cars/Edit/@car.CarID" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>