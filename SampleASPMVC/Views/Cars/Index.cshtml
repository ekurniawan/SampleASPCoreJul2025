@model IEnumerable<SampleASPMVC.Models.Car>
@{
    ViewData["Title"] = "Cars Page";
    var cars = ViewBag.Cars as List<string>;
}

<div class="col-md-12">
    <h2>Cars Lists</h2><br />

    <div class="col-md-6">
        <form asp-action="Index" method="get">
            <div class="input-group mb-3">
                <input type="text" id="search" name="search" placeholder="Search by Model, Type or Color"
                    class="form-control" />
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
            </div>
        </form>
    </div>

    @Html.Raw(ViewBag.Message)
    <a asp-action="Insert" class="btn btn-success btn-sm">Insert New Car</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Car ID</th>
                <th>Model</th>
                <th>Type</th>
                <th>Base Price</th>
                <th>Color</th>
                <th>Stock</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.CarID</td>
                    <td>@car.Model</td>
                    <td>@car.Type</td>
                    <td>@string.Format("{0:N0}", car.BasePrice)</td>
                    <td>@car.Color</td>
                    <td>@car.Stock</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@car.CarID" class="btn btn-warning btn-sm">Edit</a>
                        &nbsp;
                        <a asp-action="Delete" asp-route-id="@car.CarID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>